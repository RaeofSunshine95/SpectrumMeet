<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/daliakat.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <img src="~/Content/img/why-us-bg3.png" alt="">
            <a class="navbar-brand" href="#">SpectrumMeet</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", null, new {area=String.Empty, controller="Home"})">
                            Home
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("About", null, new {area=String.Empty, controller="Home"})">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", null, new {area=String.Empty, controller="Home"})">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", null, new {area="GroupPage", controller="Groups"})">Groups</a>
                    </li>
                    <li class="nav-item">
                        <!--I'm so glad that this nav-link is so much simpler now and just works properly!
                    The user controller handles all the session variable work so I don't need to put it here.'-->
                        <a class="nav-link" href="@Url.Action("Details",null, new {area="UserProfile", controller="Users"})">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index",null,new {area="Condition", controller="Conditions"})">Condition List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UserSearch",null,new {area="UserProfile", controller="Search"})">User Search</a>
                    </li>
                </ul>

                <button class="btn btn-dark" type="button" onclick="window.location.href = '@Url.Action("Login",null, new {area="Administration", controller="Accounts"})';">Log In</button>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <!--Footer with a big ol versioning string. Had to directly reference the package instead of indirect reference like bob showed us, but it works so who cares.-->
            <p>&copy; @DateTime.Now.Year by The Spectrum Meet Team | ver. @System.Reflection.Assembly.GetAssembly(typeof(SpectrumMeetMVC.Controllers.HomeController)).GetName().Version.ToString()</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
